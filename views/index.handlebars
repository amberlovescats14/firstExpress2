<h1 class="text-center mb-3">{{title}}</h1>

<h4>People</h4>

<form action="/api/people" method="POST" class="mb-4">
<div class="form-group">
<label for="name">Name:</label>
<input type="text" name="name" class="form-control">
</div>
<div class="form-group">
<label for="color">Color:</label>
<input type="text" name="color" class="form-control">
</div>
<input type="submit" value="Add Member" class="btn btn-primary btn-block">
</form>


<ul class="list-group">
  {{#each people}}
  <li class="list-group-item" style="color:{{this.color}}">
    Name: {{this.name}} Color:{{this.color}}
    </li>
  {{/each}}
  </ul>

  <a href="/api/people" class="btn btn-light mt-4">
  Show API
  </a>